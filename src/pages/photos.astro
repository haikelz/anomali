---

<Layout
  title="Photos"
  description="Some of the photos that I've taken with my camera."
  url="https://ekel.dev/photos"
>
  <div
    class:list={[
      "flex w-full flex-col items-start justify-start",
      "md:text-start"
    ]}
  >
    <section class="w-full">
      <h1 data-cy="heading" class="mb-0">Photos</h1>
      <p data-cy="description" class="mb-0 text-justify">
        Some of the photos that I've taken with my camera.
      </p>
    </section>
    <section
      data-cy="photos-list"
      class="mt-8 grid w-full grid-cols-1 grid-rows-1 gap-4 sm:grid-cols-2 sm:grid-rows-2"
    >
      {
        photosList.map((item) => (
          <Image
            width={500}
            height={500}
            quality={100}
            format="avif"
            src={`/images/photos/${item.id}.png`}
            alt={item.name.replace("photo ", "")}
            class="!my-0"
          />
        ))
      }
    </section>
  </div>
</Layout>
