---
import { getCollection } from "astro:content";
import { format } from "date-fns";
import { ArrowLeftIcon } from "lucide-react";
import Layout from "~layouts/Layout.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("notes");

  return blogEntries.map((item) => ({
    params: { slug: item.slug },
    props: { item },
  }));
}

const { item } = Astro.props;
const { Content, remarkPluginFrontmatter } = await item.render();
---

<Layout title={item.data.title}>
  <div class="w-full">
    <button
      onclick="window.location.replace('/notes')"
      class="w-4 flex-col justify-center items-center rounded-full h-4 p-4 bg-base-5"
    >
      <ArrowLeftIcon />
    </button>
    <h1 class="mt-4">{item.data.title}</h1>
    <div class="flex items-center">
      <span class="font-bold text-base-0 mr-1.5"
        >{item.data.author}, {remarkPluginFrontmatter.minutesRead} / {
          format(item.data.created_at, "LLLL d, yyyy")
        }
      </span>
    </div>
    <p class="text-right text-xl font-bold arabic-font">
      بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ
    </p>
    <Content />
  </div>
</Layout>
