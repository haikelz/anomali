---
import "@fontsource/bricolage-grotesque";
import "@fontsource/ibm-plex-mono";
import "@fontsource/noto-naskh-arabic";
import Navbar from "~components/Navbar.astro";
import "../index.css";

interface Props {
  title: string;
  description: string 
  url: string 
}

const { title, description,url } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content={title} />
    <meta property="og:url" content={url} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/opengraph.png" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white w-full">
    <main
      class="flex min-h-screen w-full leading-[1.75] tracking-wide text-base-0 justify-center items-start"
    >
      <div
        class="max-w-3xl mx-auto w-full container prose prose-gray prose-base px-4 pt-8 pb-24"
      >
        <slot />
      </div>
    </main>
    <Navbar />
  </body>
</html>
